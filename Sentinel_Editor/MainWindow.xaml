<Window x:Class="Sentinel_Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sentinel Editor"
        MinWidth="512" MinHeight="512" 
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        Name="Window_Main">
    
        <Canvas Name="Canvas_Main">
        <Grid Name="Grid_Main" Canvas.Left="0" Canvas.Top="0" Background="LightSlateGray" Width="{Binding ElementName=Canvas_Main,Path=ActualWidth}" Height="{Binding ElementName=Canvas_Main,Path=ActualHeight}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="500" Width="*" />
            </Grid.ColumnDefinitions>

            <Menu Grid.Row="0" IsMainMenu="True" Background="LightGray" Width="{Binding ElementName=Window_Main,Path=ActualWidth}">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open" Click="Open_Click" />
                    <Separator/>
                    <MenuItem Header="_Save" Click="Save_Click" />
                    <MenuItem Header="_Save As..." Click="SaveAs_Click" />
                    <Separator/>
                    <MenuItem Header="_Exit" Click="Exit_Click" />
                </MenuItem>

                <MenuItem Header="_Edit">
                </MenuItem>

                <MenuItem Header="_Help">
                    <MenuItem Header="_About..." Click="About_Click" />
                </MenuItem>
            </Menu>

            <ToolBarTray Grid.Row="1" Background="{x:Null}">
                <ToolBar Name="ToolBar_Common" HorizontalAlignment="Left" VerticalAlignment="Top" Background="LightGray" BorderBrush="Gray" BorderThickness="1">
                    <Button Name="Open_File" Width="22" Height="22" Click="ToolBar_Open_Click">
                        <Button.Content>
                            <Image Source="/Sentinel_Editor;component/Images/Open.png" Width="16" Height="16" Stretch="Fill" StretchDirection="Both" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Button.Content>
                    </Button>

                    <Button Name="Save_File" Width="22" Height="22" Click="ToolBar_Save_Click">
                        <Button.Content>
                            <Image Source="/Sentinel_Editor;component/Images/Save.png" Width="16" Height="16" Stretch="Fill" StretchDirection="Both" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Button.Content>
                    </Button>
                </ToolBar>
            </ToolBarTray>

            <Border Grid.Row="2" Name="RendererHWND0" BorderThickness="5" BorderBrush="RoyalBlue" Margin="0,2,0,-2" />
        </Grid>
    </Canvas>
</Window>
